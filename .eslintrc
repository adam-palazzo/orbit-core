{
  "extends": ["@orbitdb/eslint-config-orbitdb", "plugin:compat/recommended"],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "ipcRenderer": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 100,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-var": "warn",
    "prefer-const": "error"
  },
  "settings": {
    "polyfills": ["promises"]
  }
}
